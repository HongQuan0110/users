extends ../layouts/common.pug
block content

    h1 Products
    .d-flex
        a(class="btn btn-primary" href="/users/create") New Product
        form.ml-auto(action="/users/search", method="get")
            input(type="text", name="q", value=val)
            button(class="btn btn-primary ml-2") Search

    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card
                    img.card-img-top(src=product.image)
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        a.btn.btn-primary Detail
    
    .d-flex.bd-highlight.mb-3
        nav.ml-auto.p-2.bd-highlight(aria-label='Page navigation example')
            ul.pagination
                li.page-item
                    a.page-link(href='/product?page=' + (page - 1), aria-label='Previous')
                        span(aria-hidden='true') &laquo;
                li.page-item
                    a.page-link(href='/product?page=' + (page - 1))= page - 1
                li.page-item
                    a.page-link(href='/product?page=' + page)= page
                li.page-item
                    a.page-link(href='/product?page=' + (page + 1))= page + 1
                li.page-item
                    a.page-link(href='/product?page=' + (page + 1), aria-label='Next')
                        span(aria-hidden='true') &raquo;
