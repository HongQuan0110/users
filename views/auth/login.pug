extends ../layouts/common.pug
block content
    h1 Add User

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action="/auth/login", method="post")
        .form-group
            label(for="email") Email
            input#email.form-control(type="text", name="email", placeholder="email", value=user ? user.email : "")
        .form-group
            label(for="password") Password
            input#password.form-control(type="password", name="password", placeholder="password", value=user ? user.password : '')
        button.btn.btn-primary Login