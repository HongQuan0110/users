extends ../layouts/common.pug
block content
    h1 Add User

    if errors
        each error in errors
            .alert.alert-danger=error

    form(action="/users/create", method="post")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", placeholder="Name", value=user ? user.name : "")
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text", name="phone", placeholder="Phone", value=user ? user.phone : '')
        button.btn.btn-primary Create