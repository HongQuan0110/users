extends ../layouts/common.pug
block content

    h1 Users
    .d-flex
        a(class="btn btn-primary" href="/users/create") New User
        form.ml-auto(action="/users/search", method="get")
            input(type="text", name="q", value=val)
            button(class="btn btn-primary ml-2") Search

    table.table.mt-2
        tr 
            th Name
            th Phone
            th Detail
        each val in users
            tr
                td= val.name                
                td=val.phone
                td
                    a.btn.btn-primary(href='/users/' + val.id) View